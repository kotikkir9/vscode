{
    "files.autoSave": "onFocusChange",
    "files.exclude": {
        "**/.settings": true
        // "**/.vscode": true
    },

    "terminal.integrated.tabs.enabled": true,

    "workbench.colorTheme": "JetBrains Darcula Theme",
    "workbench.iconTheme": "bearded-icons",
    "workbench.productIconTheme": "material-product-icons",
    "workbench.tree.indent": 24,
    "workbench.editor.showIcons": false,
    "workbench.colorCustomizations": {
        "tree.indentGuidesStroke": "#68fa06",
        "activityBarBadge.background": "#f84339"
    },

    "editor.fontFamily": "'Cascadia Code', Consolas, 'Courier New', monospace",
    "editor.fontSize": 13,
    "editor.mouseWheelZoom": true,
    "editor.inlayHints.enabled": "onUnlessPressed",
    "editor.inlineSuggest.enabled": true,
    "editor.minimap.enabled": false,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.rulers": [100, 120],
    "editor.bracketPairColorization.enabled": false,
    "editor.tabSize": 4,
    "editor.detectIndentation": false,

    "explorer.compactFolders": false,
    "explorer.sortOrder": "type",
    "explorer.sortOrderLexicographicOptions": "upper",
    "explorer.confirmDragAndDrop": false,
    "explorer.confirmDelete": false,

    "prettier.tabWidth": 4,

    "javascript.updateImportsOnFileMove.enabled": "always",
    "typescript.updateImportsOnFileMove.enabled": "always",

    "svelte.enable-ts-plugin": true,
    "[svelte]": {
        "editor.defaultFormatter": "svelte.svelte-vscode"
    },
    "workbench.startupEditor": "none",

    "vim.leader": "<space>",
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": ["<Leader>", "f"],
            "commands": ["editor.action.formatDocument"]
        },
        {
            "before": ["<Leader>", "q"],
            "commands": ["editor.action.commentLine"]
        },
        {
            "before": ["<Leader>", "l"],
            "commands": [":tabnext"]
        },
        {
            "before": ["<Leader>", "tab"],
            "commands": [":tabnext"]
        },
        {
            "before": ["<Leader>", "h"],
            "commands": [":tabprev"]
        },
        {
            "before": ["<leader>", "b", "d"],
            "commands": [":tabclose"]
        }
    ],
    "vim.insertModeKeyBindingsNonRecursive": [
        {
            "before": ["j", "j"],
            "commands": ["extension.vim_escape"]
        }
    ],
    "vim.visualModeKeyBindingsNonRecursive": [
        {
            "before": ["<Leader>", "q"],
            "commands": ["editor.action.commentLine"]
        }
    ],
    "[csharp]": {
        "editor.defaultFormatter": "ms-dotnettools.csharp"
    },

    "[c]": {
        "editor.defaultFormatter": "xaver.clang-format"
    },
    "[cpp]": {
        "editor.defaultFormatter": "xaver.clang-format"
    },
    "hexeditor.columnWidth": 16,
    "hexeditor.showDecodedText": true,
    "hexeditor.defaultEndianness": "little",
    "hexeditor.inspectorType": "aside",
    "clang-format.fallbackStyle": "Microsoft",
    "explorer.autoReveal": false,
    "zig.zls.path": "zls",
    "zig.initialSetupDone": true,
    "editor.unicodeHighlight.invisibleCharacters": false,
    "git.openRepositoryInParentFolders": "always",
    "editor.wordWrap": "off",
    "continue.telemetryEnabled": false,
    "continue.enableTabAutocomplete": false,
    "zig.path": "zig",
    "[go]": {
        "editor.defaultFormatter": "golang.go"
    },
    "workbench.editorAssociations": {
        "*.dll": "hexEditor.hexedit",
        "*.sqlite3": "sqlite3-editor.editor",
        "*.sqlite": "sqlite3-editor.editor"
    },
    "clangd.fallbackFlags": [
        "-IC:/Program Files/mingw64/x86_64-w64-mingw32/include"
    ],
    "symbols.hidesExplorerArrows": false,
    "vssolution.solutionExplorerIcons": "current-theme"
}
